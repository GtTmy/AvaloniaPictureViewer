<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia2.MainWindow"
        Title="Avalonia Image Viewer">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="9*"/>
        <RowDefinition Height="1*"/>
      </Grid.RowDefinitions>
      <Grid Grid.Row="0">
        <Viewbox Stretch="Uniform">
          <Image Source="C:\Users\tmygt\Downloads\3695877524_b3b7cdc40a_o.jpg"/>
        </Viewbox>
      </Grid>
      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" FontSize="24" Content="←" Command="{Binding PrevPageCommand}"/>
        <Button Grid.Column="1" FontSize="24" Content="→" Command="{Binding NextPageCommand}"/>
      </Grid>
    </Grid>
</Window>
